<Window x:Class="AMWE_Administrator.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMWE_Administrator"
        mc:Ignorable="d"
        Title="AMWE" Height="450" Width="400" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="363*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="320" Height="22" Margin="10,0,0,0"/>
        <Button x:Name="SendButton" Content="->" HorizontalAlignment="Left" Margin="335,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="55" Height="22" Click="SendButton_Click"/>
        <ScrollViewer Margin="10,10,10,10" Grid.Row="1">
            <TextBlock x:Name="ChatBox"/>
        </ScrollViewer>
        <Label x:Name="lbChatState" Content="ChatState..." Margin="4,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Grid>
</Window>